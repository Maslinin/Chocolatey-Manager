<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<UseWindowsForms>true</UseWindowsForms>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<ApplicationManifest>Properties\app.manifest</ApplicationManifest>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json">
			<Version>13.0.1</Version>
		</PackageReference>
	</ItemGroup>
	<ItemGroup>
		<ContentWithTargetPath Include="src\ProgramInstaller\Categories.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<TargetPath>Categories.json</TargetPath>
		</ContentWithTargetPath>
		<ContentWithTargetPath Include="src\ProgramInstaller\ProgramList.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<TargetPath>ProgramList.json</TargetPath>
		</ContentWithTargetPath>
	</ItemGroup>
</Project>